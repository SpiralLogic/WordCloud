<Window x:Class="WordCloud.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordCloud.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="1300" Width="1500" BorderThickness="0">
    <StackPanel>
        <local:WordCloud DataContext="{Binding WordCloudData}" x:Name="WordcloudControl" Height="700" Width="700"></local:WordCloud>
        <Button Click="AddWord" Content="add"></Button>
        <Button Click="DoWordCloud" Content="do"></Button>
        <TextBlock Name="Time"></TextBlock>
        <TextBlock Name="Failures"></TextBlock>
    </StackPanel>
</Window>
